<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/relLayout"
    android:layout_width="320dp"
    android:layout_height="200dp"
    android:layout_below="@id/relLayout"
    android:layout_marginStart="30dp"
    android:layout_marginTop="70dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/orange_card"
    app:cardBackgroundColor="#F49A0B"
    android:elevation="2dp"
    android:padding="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/layout_bg"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/more_options"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_overflow"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"

                />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/departing_destination"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/journey_time"
            android:layout_below="@id/departing_destination"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:textSize="26sp"
            android:textStyle="bold"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/train_destination"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/train_service_name"
                android:layout_below="@id/journey_time"
               android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="35dp"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</android.support.v7.widget.CardView>