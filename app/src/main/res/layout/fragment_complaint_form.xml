<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCDCDC"
        android:id="@+id/linearLayout"
        >

    <TextView
        android:id="@+id/form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Complaint Form"
        android:textStyle="bold"
        />
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/form_info"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:text="Your previous selections will be included in this report"
        />

    <EditText
        android:id="@+id/date_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="55dp"
        android:hint="Date"
        />

    <EditText
        android:id="@+id/journey_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_pick"
        android:layout_marginTop="10dp"
        android:hint="Select Journey"
        />


    <EditText
        android:id="@+id/more_details"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/journey_select"
        android:layout_marginTop="10dp"
        android:hint="Please provide any extra comments concerning your complaint"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/location_icon"
        android:background="@drawable/ic_location"
        android:layout_below="@id/more_details"
        android:layout_marginTop="25dp"
        android:layout_marginStart="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share_location_title"
        android:layout_below="@id/more_details"
        android:layout_marginTop="24dp"
        android:layout_marginStart="30dp"
        android:text="Share My Location"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <RadioButton
        android:id="@+id/share_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_details"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="12dp"

        />




    <Button
        android:id="@+id/submit_complaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Submit"
        android:textColor="@color/white"
        android:background="@drawable/btn_rounded_purple"
        />


</RelativeLayout>